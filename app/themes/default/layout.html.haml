    = javascript_include_tag 'jquery-2.1.1.min', 'data-turbolinks-track' => true
    = javascript_include_tag 'jquery.maskedinput', 'data-turbolinks-track' => true
    = javascript_include_tag 'utils', 'data-turbolinks-track' => true
    = javascript_include_tag 'main', 'data-turbolinks-track' => true
    / Admin
    / EOF Admin
    %title Уборка квартир в Москве
