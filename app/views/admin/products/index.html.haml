%h1 Listing products

%table.table.table-hover
  %thead
    %tr
      %th General
      %th Additional
      %th Quantity
      %th Active
      / %th Total price
      %th
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td= product.general_id #truncate product.general_id, length: 10
        %td= product.additional_id #truncate product.additional_id, length: 10
        %td= product.quantity
        %td= product.active
        / %td= product.total_price
        %td
          = link_to 'Show', admin_product_path(product)
          = link_to 'Edit', edit_admin_product_path(product)
        %td= link_to 'Destroy', admin_product_path(product), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Product', new_admin_product_path, class: "btn btn-primary"
