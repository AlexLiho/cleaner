= form_for [:admin, @additional] do |f|
  = render 'errors', object: @additional

  %p
    = f.label :title
    = f.text_area :title, class: "form-control"
  %p
    = f.label :description
    = f.text_area :description, class: "form-control"
  %p
    = f.label :price
    = f.text_field :price, class: "form-control"
  %p
    = f.label :time_for_job
    = f.text_field :time_for_job, maxlength: 3
  .actions
    = f.submit 'Save', class: "btn btn-primary"
