= form_for @order_item do |f|
  - if @order_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order_item.errors.count, "error")} prohibited this order_item from being saved:"
      %ul
        - @order_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :general
    = f.text_field :general
  .field
    = f.label :additional
    = f.text_field :additional
  .field
    = f.label :order
    = f.text_field :order
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :total_price
    = f.text_field :total_price
  .actions
    = f.submit 'Save'
